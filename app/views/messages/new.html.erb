<div class="contact_form_container">

<div class="contact_form_picture">
</div>

<div class="contact_form">

<%= form_for @message, url: contact_path do |message_form| %>
  <fieldset>
    <div class="field">
      <%= message_form.text_field :name, placeholder: "Nom" %>
    </div>
    
    <div class="field">
      <%= message_form.email_field :email, placeholder: "Email"%>
    </div>

    <div class="field">
      <%= message_form.text_field :subject, placeholder: "Sujet" %>
    </div>
    
    <div class="field">
      <%= message_form.text_area :content, placeholder: "Message"%>
    </div>
  </fieldset>
  
  <fieldset>
    <div class="field">
      <%= message_form.submit "Envoyer" %>
    </div>
  </fieldset>
<% end %>

</div>

</div>