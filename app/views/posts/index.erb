<section class="container">
  <div class="bloc_article">

  <ul>
  <% @otherposts.each do |post| %>
    <li>
      <div class="article">
        <div class"focus_effect">
          <div class="article_title">
            <h1>
              <%= link_to post.title, post_path(post) %>
            </h1>
          </div>
        </div>

        <div class="article_picture">
          <%= link_to cl_image_tag(post.picture_url(:thumbnail), :width => 300, :height => 200, :crop => :fill), post_path(post) %>
        </div>

        <div class="article_description">
          <div class="article_summary">
            <%= link_to truncate(strip_tags(post.content), :length => 300), post_path(post) %>
          </div>
          <div class="next">
            <%= link_to 'lire la suite', post_path(post) %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  </ul>

  <% if user_signed_in? %>
    <div class="create_post_button button_fixed">
      <%= link_to "Nouveau", new_post_path %>
    </div>
  <% end %>

  </div>

  <aside_inshort>
  <div class="inshort">
        <div class="inshort_title">
          <h2>En bref...</h2>
        </div>
        <div class="inshort_content">
          <ul>
            <% @inshortposts.each do |post| %>
              <li>
                <div class="inshort_article">
                  <div class="inshort_article_title">
                    <div class="inshort_att">
                    <%= link_to truncate(post.title, length: 90, separator: ' '), post_path(post) %>
                    </div>
                    <div class="inshort_article_date">
                      <%= link_to post.published_at.strftime("%d/%m/%Y"), post_path(post) %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
    </div>
  </aside_inshort>
</section>
