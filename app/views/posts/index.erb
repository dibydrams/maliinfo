<% content_for :head do %>
  <link rel="alternate" type="application/rss+xml" href='<%= "http://maliinfo.herokuapp.com" + posts_path(format: 'rss') %>' title="Mali Info">
  <meta property="og:url" content="http://mali-info.net"/>
  <meta property="og:type" content="website"/>
  <meta property="og:title" content="Mali Info" />
  <meta property="og:image" content="http://res.cloudinary.com/hd2c0qxh2/image/upload/c_fill,g_north,h_420,w_630/v1436183452/vbnhg2i71zfwrxrtgmrp.jpg"/>
  <meta name="description" content="Site d'information dédié à l'actualité malienne" />
  <meta property="og:site_name" content="Mali Info" />
  <meta property="og:type" content="website"/>
  <meta name="keywords" content="mali, info, news, actu, actualité, politique" />
<% end %>

<section>
  <div class="menu_tag">
    <ul class="tag_list">
      <div class="tag_intro">
        <p>En ce moment...</p>
      </div>
      <% @tags.each do |post| %>
        <li class="tags">
            <%= link_to post.tag_list, post_path(post) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="marquee">
    <% @marquee.each do |post| %>
      <p><%= link_to post.title, post_path(post) %></p>
      <p><%= link_to post.title, post_path(post) %></p>
    <% end %>
  </div>
</section>

<section class="container">
  <div id="container_carrousel" class="shadow">
    <ul class="carrousel">
      <% @slides.each do |post| %>
        <li>
          <%= link_to cl_image_tag(post.picture_url(:standard), :width => 630, :height => 420, :crop => :fill), post_path(post) %>
        </li>
      <% end %>
    </ul>
  </div>

  <% @firstpost.each do |post| %>
    <div class="spotlight_article">
      <div class="focus_effect"></div>

      <div class="spotlight_article_title">
        <h1>
          <%= link_to truncate(post.title, length: 90, separator: ' '), post_path(post) %>
        </h1>
      </div>

      <div class="spotlight_article_picture">
        <%= link_to cl_image_tag(post.picture_url(:thumbnail), :width => 330, :height => 220, :crop => :fill), post_path(post) %>
      </div>

      <div class="spotlight_article_description">
        <div class="spotlight_article_summary">
          <%= link_to sanitize(post.content.truncate(200, separator: ' ')), post_path(post) %>
        </div>
        <div class="next">
          <%= link_to 'lire la suite', post_path(post) %>
        </div>
      </div>
    </div>
  <% end %>


